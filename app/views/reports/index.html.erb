  </div>
</div>
<script>
  var ctx = document.getElementById("controlledPatientsTrend").getContext("2d");
  var gradientFill = ctx.createLinearGradient(0, 300, 0, -200);
  gradientFill.addColorStop(0, "rgba(81, 205, 130, 0)");
  gradientFill.addColorStop(1, "rgba(81, 205, 130, 0.2)");

  var chart = new Chart(ctx, {
    type: "line",
    data: {
      labels: ["January", "", "", "", "", "", "Today"],
      lineTension: 0,
      datasets: [{
        backgroundColor: gradientFill,
        borderColor: "rgba(81, 205, 130, 1)",
        pointStyle: "dash",
        data: [0, 10, 5, 2, 20, 30, 45],
      }],
    },
    options: {
      elements: {
        line: {
          tension: 0,
        },
      },
      legend: {
        display: false,
      },
      scales: {
        xAxes: [{
          display: false,
          gridLines: {
            display: false,
            drawBorder: false,
          },
        }],
        yAxes: [{
          display: false,
          gridLines: {
            display: false,
            drawBorder: false,
          },
        }],
      },
    }
  })
</script>
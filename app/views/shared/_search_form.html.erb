<%= bootstrap_form_with(url: path, method: :get, class: "mt-3", local: true) do |form| %>
  <div class="row mb-5">
    <%= render 'shared/search_bar', form: form, placeholder: placeholder %>

    <div class="col col-12 col-md-1 mb-2 pl-md-0">
      <%= form.submit "Search", class: "btn btn-success btn-block", wrapper: false, tabindex: 3 %>
    </div>
  </div>
<% end %>

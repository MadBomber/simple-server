<%= bootstrap_form_with(url: form_url, method: :get, class: "mt-4", layout: :horizontal, local: true) do |form| %>
  <div class="form-row">
    <div class="col col-12 col-md-2 mb-2">
      <%= form.select :district,
          policy_scope(scope_namespace)
              .sort_by(&:district)
              .map { |facility| [facility.district, facility.district] }
              .uniq,
          {
              hide_label: true,
              include_blank: "All districts",
              selected: district,
              wrapper: false,
              class: 'pr-1',
              tabindex: 3,

          },
          onchange: "Rails.fire(this.form, 'submit');" %>
    </div>

    <%= render "shared/search_bar", form: form, placeholder: "Search by name or phone number..." %>

    <div class="col col-12 col-md-1 mb-2 pl-md-0">
      <%= form.submit "Search", class: "btn btn-success btn-block", wrapper: false, tabindex: 3 %>
    </div>
  </div>
<% end %>
